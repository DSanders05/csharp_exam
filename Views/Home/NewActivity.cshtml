@model Act

<h1>Dojo Activity Center</h1>
<a href="/dashboard">Dashboard</a>
<a href="/logout">Logout</a>
<hr>
<h3>Create an Activity</h3>
<div class="container">
    <form action="/createActivity" method="post">
        <div class="form-group">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title"  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Date">Date:</label>
            <input asp-for="Date" type="date" class="form-control">
            <span asp-validation-for="Date"  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Duration">Duration: </label>
            <input asp-for="Duration" class="form-control">
            <select asp-for="DurAmount">
                <option value="minutes">Minutes</option>
                <option value="hours">Hours</option>
            </select>
            <span asp-validation-for="Duration"  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Time">Starting Time:</label>
            <input name="Time" type="time" class="form-control">
            <span asp-validation-for="Time"  class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Description">Description:</label>
            <textarea asp-for="Description" cols="30" rows="4"></textarea>
            <span asp-validation-for="Description"  class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="hidden" name="UserId" value="@ViewBag.userInfo">
            <input type="submit" value="Create Activity" class="btn btn-success">
        </div>
    </form>
</div>